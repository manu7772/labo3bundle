{% extends "LaboTestmanuBundle::sitePage.html.twig" %}
{% block title %}{{ parent() }} - Richtexts à convertir{% endblock %}

{% block main_contain %}
{% set entiteName = "Richtexts" %}
{% set ssentiteName = "à convertir" %}
{% include "LaboTestmanuBundle:bloc:page-header.html.twig" %}
<div class="row">
	<!-- Corps complet -->
	<div class="well well-sm"><span class="glyphicon glyphicon-circle-arrow-right"></span>&nbsp;&nbsp;Liste des textes</div>
	<div class="list-group ">
		<a href="{{ path('labo_richtext_links', {'id': 0}) }}" class="list-group-item active">
			<button type="button" class="btn btn-primary-sm">Convertir tout</button>
		</a>
		{% for richtext in richtexts %}
		<a href="{{ path('labo_richtext_links', {'id': richtext.id}) }}" class="list-group-item">
			{% if richtext.twigConverti == 1 %}
			<span class="label label-primary pull-right">Converti {{ richtext.twigConverti }}</span>
			{% else %}
			<span class="label label-danger pull-right">Non converti {{ richtext.twigConverti }}</span>
			{% endif %}
			<h4 class="list-group-item-heading">{{ richtext.titre }}</h4>
			<p class="list-group-item-text">{{ phraseCut(richtext.texte|striptags, 140) }}</p>
		</a>
		{% endfor %}
	</div>
</div>
{% endblock %}